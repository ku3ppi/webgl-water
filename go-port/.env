# WebGL Water Tutorial Go Port - Environment Configuration

# Server Configuration
PORT=8080
HOST=localhost

# Asset Paths
ASSETS_PATH=./assets
STATIC_PATH=./web/static
SHADER_PATH=./web/shaders

# Development Settings
GO_ENV=development
DEBUG=true
LOG_LEVEL=info

# WebGL Configuration
CANVAS_WIDTH=800
CANVAS_HEIGHT=600

# Water Rendering Settings
DEFAULT_REFLECTIVITY=0.6
DEFAULT_FRESNEL_STRENGTH=2.0
DEFAULT_WAVE_SPEED=0.03
USE_REFLECTION=true
USE_REFRACTION=true

# Framebuffer Sizes
REFLECTION_TEXTURE_WIDTH=320
REFLECTION_TEXTURE_HEIGHT=180
REFRACTION_TEXTURE_WIDTH=1280
REFRACTION_TEXTURE_HEIGHT=720

# Camera Settings
CAMERA_MIN_DISTANCE=5.0
CAMERA_MAX_DISTANCE=50.0
CAMERA_MIN_PITCH=-1.5
CAMERA_MAX_PITCH=1.5
CAMERA_INITIAL_DISTANCE=15.0
CAMERA_INITIAL_YAW=0.0
CAMERA_INITIAL_PITCH=0.3

# WebSocket Configuration
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_PING_INTERVAL=30
WS_PONG_TIMEOUT=10

# CORS Settings (for development)
ALLOW_ORIGINS=*
ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOW_HEADERS=Content-Type,Authorization

# Mesh Generation Settings
WATER_MESH_SIZE=20.0
WATER_MESH_SEGMENTS=64
TERRAIN_MESH_SIZE=50.0
TERRAIN_MESH_SEGMENTS=32
TERRAIN_HEIGHT_SCALE=5.0

# Performance Settings
MAX_FPS=60
VSYNC=true
